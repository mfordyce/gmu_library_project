
<% content_for :title, @book.title %>


<article class="book">
  <header>
    <h2><strong><%= @book.title %></strong></h2>
  </header>
  <p><%= image_tag @book.image_cover_url %> <%= @book.abstract %></p>
  <p style="font-size:160%;"><strong>Details</strong></p>
  <p><label>Book ID number:</label> <%= @book.id %></p>
  <p><label>Author ID:</label> <%= @book.author_id %></p>
  <p><label>ISBN:</label> <%= @book.isbn %></p>

  <p><label>Pages:</label> <%= @book.pages %></p>
  <p><label>Genre:</label> <%= @book.genre %></p>
  <p><label>Published on:</label> <%= @book.published_on %></p>


</article><%= link_to 'All Books', books_path %>
| <%= link_to 'Edit', edit_book_path(@book) %>

<%= button_to 'Delete', @book,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
