
<% content_for :title, @book.title %>


<article class="book">
  <header>
    <h2><%= @book.title %></h2>
  </header>
  <p><label>Book ID number:</label> <%= @book.id %></p>
  <p><label>Author ID:</label> <%= @book.author_id %></p>
  <p><label>ISBN:</label> <%= @book.isbn %></p>
  <p><label>Pages:</label> <%= @book.pages %></p>

</article><%= link_to 'All Books', books_path %>
| <%= link_to 'Edit', edit_book_path(@book) %>

<%= button_to 'Delete', @book,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
